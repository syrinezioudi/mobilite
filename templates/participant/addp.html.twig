{% block title  %}Les offres de mobilité {% endblock %}

{% block body %}
<div style="position: absolute; margin-left: 400px; margin-top: 100px; width: 60%">
	<!-- Form Start -->
	<div class="col-sm-120 col-xl-60">
		<div class="bg-light rounded h-100 p-4">
			<h6 class="mb-4">Ajouter votre postulation</h6>
			{{form_start(formParticipant,{'attr': {'novalidate': 'novalidate'}}
			)}}
			<div class="row mb-3">
				<label class="col-sm-2 col-form-label">Nom </label>
				<div class="col-sm-10">
					{{ form_widget(formParticipant.nomp,{ 'attr': {'class': 'form-control'} }) }}
					{{ form_errors(formParticipant.nomp) }}
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-2 col-form-label">Prenom</label>
				<div class="col-sm-10">
					{{ form_widget(formParticipant.prenom,{ 'attr': {'class': 'form-control'} }) }}
					{{ form_errors(formParticipant.prenom) }}
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-2 col-form-label">Email</label>
				<div class="col-sm-10">
					{{ form_widget(formParticipant.email,{ 'attr': {'class': 'form-control'} }) }}
