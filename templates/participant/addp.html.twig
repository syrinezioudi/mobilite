					{{ form_errors(formParticipant.RBac) }}
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-2 col-form-label">Relevé de notes du 1ere année</label>
				<div class="col-sm-10">
					{{ form_widget(formParticipant.R1,{ 'attr': {'class': 'form-control'} }) }}
					{{ form_errors(formParticipant.R1) }}
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-2 col-form-label">Relevé de notes du 2eme année</label>
				<div class="col-sm-10">
					{{ form_widget(formParticipant.R2,{ 'attr': {'class': 'form-control'} }) }}
					{{ form_errors(formParticipant.R2) }}
				</div>
			</div>
            <div class="row mb-3">
				<label class="col-sm-2 col-form-label">Relevé de notes du 3eme année</label>
				<div class="col-sm-10">
					{{ form_widget(formParticipant.R3,{ 'attr': {'class': 'form-control'} }) }}
					{{ form_errors(formParticipant.R3) }}
				</div>
			</div>
            <div class="row mb-3">
				<label class="col-sm-2 col-form-label">Relevé de notes du 4eme année</label>
				<div class="col-sm-10">
					{{ form_widget(formParticipant.R4,{ 'attr': {'class': 'form-control'} }) }}
					{{ form_errors(formParticipant.R4) }}
				</div>
			</div>
            <div class="row mb-3">
				<label class="col-sm-2 col-form-label">Relevé de notes du 1ere année license</label>
				<div class="col-sm-10">
					{{ form_widget(formParticipant.RL1,{ 'attr': {'class': 'form-control'} }) }}
					{{ form_errors(formParticipant.RL1) }}
				</div>
			</div>
            <div class="row mb-3">
				<label class="col-sm-2 col-form-label">Relevé de notes du 2eme année license</label>
				<div class="col-sm-10">
					{{ form_widget(formParticipant.RL2,{ 'attr': {'class': 'form-control'} }) }}
					{{ form_errors(formParticipant.RL2) }}
				</div>
			</div>
            <div class="row mb-3">
				<label class="col-sm-2 col-form-label">Relevé de notes du 3eme année</label>
				<div class="col-sm-10">
					{{ form_widget(formParticipant.RL3,{ 'attr': {'class': 'form-control'} }) }}
					{{ form_errors(formParticipant.RL3) }}
				</div>
			</div>
            <div class="row mb-3">
				<label class="col-sm-2 col-form-label">Niveau en Françcais</label>
				<div class="col-sm-10">
					{{ form_widget(formParticipant.niveauF,{ 'attr': {'class': 'form-control'} }) }}
					{{ form_errors(formParticipant.niveauF) }}
				</div>
			</div>
            <div class="row mb-3">
				<label class="col-sm-2 col-form-label">Niveau en anglais</label>
				<div class="col-sm-10">
					{{ form_widget(formParticipant.niveauA,{ 'attr': {'class': 'form-control'} }) }}
					{{ form_errors(formParticipant.niveauA) }}
				</div>
			</div>
			

</script>
			<br>
			<a href="{{path('app_front')}}" class="mt-2">Liste des offres de mobilité</a>
			<br>
			<br>
			<div style="text-align: right;">
				{{ form_widget(formParticipant.submit,{ 'attr': {'class': 'btn btn-primary'} }) }}
			</div>
			{{form_end(formParticipant)}}
		</div>
	</div>
