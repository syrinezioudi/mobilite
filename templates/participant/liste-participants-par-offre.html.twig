{% extends 'baseadmin.html.twig' %}

{% block title %}Liste des postulations par offre{% endblock %}

{% block body %}
    <div style="position: absolute; margin-left: 500px; margin-top: 100px">
        <h4>Liste des postulations pour l'offre {{ offer.titre }}</h4>
        <table class="table table-striped">
            <tr>
                <td>Id</td>
                <td>Participant</td>
                <td>Nom</td>
                <td>Prenom</td>
                <td>Email</td>
                <td>Score</td>
                <td>Date</td>
                <td>Actions</td>
            </tr>
            {% for i in tabParticipants %}
                <tr>
                    <td>{{ i.id }}</td>
                    <td>{{ i.getUser }}</td>
                    <td>{{ i.nomp }}</td>
                    <td>{{ i.prenom }}</td>
                    <td>{{ i.email }}</td>
                    {% if i.note %}
                        <td>{{ i.note.score }}</td>
                    {% else %}
                        <td>null</td>
                    {% endif %}
                    <td>{{ i.dateParticipation|date("m/d/Y") }}</td>
                    <td>
                        <a href="{{ path('app_details_par',{'id':i.id}) }}" class="btn btn-primary" tabindex="-1"
                           role="button">Details</a>
                        <a href="{{ path('app_updatePar',{'id':i.id}) }}" class="btn btn-primary" tabindex="-1"
                           role="button">Modifier</a>
                        <a href="{{ path('app_removePar',{'id':i.id}) }}" class="btn btn-primary" tabindex="-1"
                           role="button">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>

{% endblock %}