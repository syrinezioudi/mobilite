{% extends 'baseadmin.html.twig' %}

{% block title %}Liste des postulations{% endblock %}

{% block body %}
    <div style="position: absolute; margin-left: 500px; margin-top: 100px">
        <h4>Liste des postulations</h4>
        <button id="sort-by-score" class="btn btn-primary">Sort by Score</button>
        <a class="btn btn-success" href="{{ path('pdf') }}">Cr√©er un pdf</a>
        <table id="participant-table" class="table table-striped" style="margin-top: 25px">
            <thead>
            <tr>
                <th>Id</th>
                <th>Participant</th>
                <th>Offre</th>
                <th>Score</th>
                <th>Date participation</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for i in tabParticipants %}
                <tr>
                    <td>{{ i.id }}</td>
                    <td>{{ i.getUser }}</td>
                    <td>{{ i.getOffre }}</td>
                    <td>{{ i.note.score }}</td>
                    <td>{{ i.dateParticipation|date("m/d/Y") }}</td>
                    <td>
                        <a href="{{ path('app_updatePar',{'id':i.id}) }}" class="btn btn-primary" tabindex="-1"
                           role="button">Modifier</a>
                        <a href="{{ path('app_removePar',{'id':i.id}) }}" class="btn btn-primary" tabindex="-1"
                           role="button">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- Include jQuery library if not already included -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#sort-by-score").click(function () {
                sortByScore();
            });

            // Function to sort data by score using AJAX
            function sortByScore() {
                $.ajax({
                    url: "{{ path('ajax_sort_by_score') }}", // Replace with your Symfony route
                    type: "GET",
                    dataType: "json",
                    success: function (data) {
                        // Update the table with sorted data
                        updateTable(data);
                    },
                    error: function (xhr, status, error) {
                        console.error("Error:", error);
                    }
                });
            }

            // Function to update the table with sorted data
            function updateTable(data) {
                const table = $("#participant-table tbody");
                table.empty(); // Clear existing table rows
                for (var i = 0; i < data.length; i++) {
                    var row = "<tr>" +
                        "<td>" + data[i].id + "</td>" +
                        "<td>" + data[i].user + "</td>" +
                        "<td>" + data[i].offre + "</td>" +
                        "<td>" + data[i].score + "</td>" +
                        "<td>" + data[i].dateParticipation + "</td>" +
                        "<td><a href='{{ path('app_updatePar',{'id':'" + data[i].id + "'}) }}' class='btn btn-primary' tabindex='-1' role='button'>Modifier</a></td>" +
                        "<td><a href='{{ path('app_removePar',{'id':'" + data[i].id + "'}) }}' class='btn btn-primary' tabindex='-1' role='button'>Supprimer</a></td>" +
                        "</tr>";
                    table.append(row);
                }
            }
        });
    </script>
{% endblock %}
